<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/8542b4babf.js" crossorigin="anonymous"></script>
    </head>    
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List
        </h1>
        <div class="list">
            <ul class="details">
                <% for(let i of contact_list) {%>
                    <li>
                        <div class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id%>">
                                <i class="fas fa-window-close"></i>
                            </a>    
                        </div>
                        <div class="list-style">
                            <p><%=i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                        
                    </li>
                    <% } %>
            </ul>
        </div>
        <div class="form-details">
            <form action="/create-contact" method="POST" class="form-flex">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="number" name="phone" placeholder="Enter phone" required>
                <button type="Submit">Add</button>
            </form>
        </div>
    </body>
</html>